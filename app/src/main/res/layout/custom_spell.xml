<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView43"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:text="Name" />

        <EditText
            android:id="@+id/customName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView44"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:text="Level" />

        <EditText
            android:id="@+id/customLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Level"
            android:inputType="numberDecimal" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView45"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:text="Magic School" />

        <EditText
            android:id="@+id/customMagicSchool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Magic School"
            android:inputType="textPersonName" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView46"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:text="Range" />

        <EditText
            android:id="@+id/customRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Range"
            android:inputType="textPersonName" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView47"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:text="Duration" />

        <EditText
            android:id="@+id/customDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Duration"
            android:inputType="textPersonName" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView48"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:text="Casting Time" />

        <EditText
            android:id="@+id/customCastingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Casting Time"
            android:inputType="textPersonName" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView49"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:text="Components" />

        <EditText
            android:id="@+id/customComponents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Components"
            android:inputType="textPersonName" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView50"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:text="Material" />

        <EditText
            android:id="@+id/customMaterial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Material"
            android:inputType="textPersonName" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView51"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:text="Higher Levels" />

        <EditText
            android:id="@+id/customHigherLvL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Higher Levels"
            android:inputType="textPersonName" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView52"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:text="Description" />

        <EditText
            android:id="@+id/customDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Description"
            android:inputType="textMultiLine" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Switch
            android:id="@+id/customConcetration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Concetration " />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Switch
            android:id="@+id/customRitual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ritual " />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Switch
            android:id="@+id/customVisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visible " />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>